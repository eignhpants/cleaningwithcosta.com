

@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,600,300|Quicksand')
@import url('https://fonts.googleapis.com/css?family=Lato:900|Open+Sans:400,300,300italic')

@import 'nib'
//@import 'mixins/strap'
//@import 'bootstrap'



$quicksand = 'Quicksand'
open-sans = 'Open Sans'
lato = 'Lato'

small = 'screen and (max-width: 420px)'
medium = 'screen and (min-width: 420px)'
large = 'screen and (min-width: 992px)'
xlarge = 'screen and (min-width: 1200px)'

/*
 * Store the main color and
 * background color as variables
 */
main-color = #4998F2
background-color = #faf9f0


//----------------------------------
//    BOOTSTRAP OVERWRITES          |
//----------------------------------

.navbar
  font-family 'Quicksand'
  margin-bottom 0
  border-radius 0
  border none

  .navbar-nav
    a
      &:link
      &:visited
      &:active
        color white

  a
    &:link
    &:visited
    &:active
      color white

.navbar-default
  color background-color
  background-color main-color

.btn-group
  .btn-default
    border none

.estimate-btn
  position: relative
  background-color main-color
  color white
  font-size 20px
  text-align left
  border none


.contact-btn
  @extend .estimate-btn
  left -13px


  .glyphicon
    top 3px

//----------------------------------
//    PROJECT CSS                  |
//----------------------------------

.contact
  font-family 'Quicksand'
  font-size 3vw
  background-color main-color
  color background-color
  border-radius 5px
  padding 8px
  text-align center
  margin-bottom 20px
  text-shadow 0px -1px 0px darken(main-color, 30%)

  h2
    margin 10px
    line-height 150%

.number
  font-family 'Quicksand'
  background-color background-color
  main-color main-color
  color main-color
  padding 5px
  border-radius 3px
  //text-shadow 0px -1px 0px darken(background-color, 30%)

.bullet
  text-align left
  font-family open-sans
  h2
    font-family lato

.choice
  padding 15px

  .h_image
    padding 10px

#logo
  color white
  filter: drop-shadow( 6px 0 2px hsla(0, 0%, 0%, 0.2));
  //text-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)




#search
  text-align center
  width 500px
  height 70px
  font-size 3.5em
  border-radius 8px

//----------------------------------
//    PRESET CSS                   |
//----------------------------------

html
  background-color #424242

body
  font-family 'Open Sans'
  font-size 1.6em
  background-color background-color
  color #444

//TODO change back vh
header

  //height 900px
  width 100%
  padding 50px 10px
  color #fff
  font-size 3em
  text-align center

  .message
    text-align left
    @media medium
      h1
        font-family lato
        font-size 6vw
      h2
        font-size 3vw
        font-family open-sans
        font-weight 300
    @media small
      h1
        font-family lato
        font-size 14vw
      h2
        font-size 10vw
        font-family open-sans
        font-weight 300

    a
      font-family open-sans
      font-weight 300

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)



.container
  width 90%
  margin 50px auto
  overflow hidden

.main-content
  float left
  h2
    font-family lato
  p
    margin-bottom 20px

.sidebar
  float left

  .widget

  /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */

    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8


.a404
  font-size: 8em;a


footer
  background-color #424242
  color background-color
  height 200px
  padding-top 20px
  margin-top 50px
  border-top 1px dotted #ccc
  font-size 13px

  .contact-bottom
    &:link
    &:visited
    &:active
      color white

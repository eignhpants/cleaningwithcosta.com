.flex
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center


.row
  flex-direction: row
  justify-content: space-between
  @media medium
    flex-direction: column
  @media large
    flex-direction: row

.row--btns
  @extend .row
  @media medium {flex-direction: row; }
  @media large {flex-direction: row; }





//----------------------------------
//    PROJECT CSS                  |
//----------------------------------

.contact
  font-family 'Quicksand'
  font-size 3vw
  background-color: white
  color red-color
  border-radius 5px
  padding 8px
  text-align center
  margin-bottom 20px
  text-shadow 0px -1px 0px darken(main-color, 30%)

  h2
    margin 10px
    line-height 150%

.bullet
  list-style: none
  text-align left
  font-family open-sans
  h2
    font-family lato


bullet-color = #4f4f4f

.bullets--list
  border-radius 3px
  // border 1px solid bullet-color
  padding 0
  margin 0

  .bullet--item
    padding 0
    margin 0

    &:nth-child(odd)
      padding 3px
      background-color: #9f9f9f
      color white

    &:nth-child(even)
      // border-top 1px solid bullet-color
      padding 3px

.choice
  padding 15px

  .h_image
    padding 10px

#logo
  color white
  filter: drop-shadow( 6px 0 2px hsla(0, 0%, 0%, 0.2));
  //text-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)




#search
  text-align center
  width 500px
  height 70px
  font-size 3.5em
  border-radius 8px

//----------------------------------
//    PRESET CSS                   |
//----------------------------------

html
  background-color #424242

body
  color white
  font-family 'Open Sans'
  font-size 1.6em
  background-color red-color





.container
  width 90%
  margin 50px auto
  overflow hidden

.main-content
  float left
  h2
    font-family lato
  p
    margin-bottom 20px

.sidebar
  float left

  .widget

  /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */

    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8



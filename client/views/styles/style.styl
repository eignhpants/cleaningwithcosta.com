.contact
  margin-top 25px
  font-family 'Quicksand'
  font-size 3vw
  background-color: white
  color red-color
  border-radius 5px
  padding 8px
  text-align center
  margin-bottom 20px

  h2
    margin 10px
    line-height 150%



.row--bullets
  @extend .row
  flex-flow: row wrap;
  justify-content: space-around
  align-items: flex-start
  padding: 8px



.van_image
  width 100%


.bullet
  flex 1
  list-style: none
  font-family open-sans
  margin 10px;
  h2
    font-family lato



.bullets--list
  border-radius 3px
  width 90%
  padding 0
  margin 0

  .bullet--item
    padding 0
    margin 0

    &:nth-child(odd)
      padding 3px
      background-color: white
      color red-color

    &:nth-child(even)
      padding 3px


#search
  text-align center
  width 500px
  height 70px
  font-size 3.5em
  border-radius 8px

